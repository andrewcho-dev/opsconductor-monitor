# Network interface to monitor (use 'any' for all interfaces or specify like 'eth0', 'en0', etc.)
NETWORK_INTERFACE=any

# Model configuration
MODEL_UPDATE_INTERVAL=300  # Update model every 5 minutes
ANOMALY_THRESHOLD=0.9     # Threshold for considering something an anomaly (0-1)

# Alerting configuration (future use)
ALERT_EMAIL=your-email@example.com
ALERT_THRESHOLD=3         # Number of anomalies before sending an alert

# PostgreSQL configuration
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=network_scan
PG_USER=postgres
PG_PASSWORD=postgres

# Network scan configuration
PING_COMMAND=ping
PING_COUNT=1
PING_TIMEOUT=0.3
MAX_SCAN_THREADS=100
DEFAULT_SNMP_STATUS=UNKNOWN
ONLINE_STATUS=online
OFFLINE_STATUS=offline
SCAN_COMPLETION_MESSAGE=Capability scan completed: {online}/{total} hosts online

# SNMP scan configuration
SNMP_COMMUNITY=public
SNMP_PORT=161
SNMP_TIMEOUT=1
SNMP_VERSION=2c
SNMP_TEST_IP=127.0.0.1
SNMP_SUCCESS_STATUS=YES
SNMP_COMPLETION_MESSAGE=SNMP scan completed

# SSH scan configuration
SSH_PORT=22
SSH_TIMEOUT=3
SSH_USERNAME=myuser
SSH_PASSWORD=mypass

# Flask server configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=True
FRONTEND_FILE=simple_table.html
